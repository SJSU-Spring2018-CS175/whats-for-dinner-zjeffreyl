<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zjeff.whatsfordinner.LandscapeFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="30dp"
        android:background="#FFBBBB"/>

    <ListView
        android:id="@+id/recipeListLandscape"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="500dp" />

    <EditText
        android:id="@+id/IngredientsHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="457dp"
        android:layout_marginLeft="450dp"
        android:layout_marginTop="7dp"
        android:ems="10"
        android:gravity="right"
        android:inputType="textPersonName"
        android:text="Ingredients" />

    <TextView
        android:id="@+id/LandscapeIngredientList"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:layout_marginLeft="470dp"
        android:layout_marginTop="60dp"
        android:text=""
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/LandscapeDescription"
        android:layout_width="250dp"
        android:layout_height="130dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="200dp"
        android:text="" />

    <TextView
        android:id="@+id/LandscapeName"
        android:layout_width="250dp"
        android:layout_height="20dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="15dp"
        android:text="" />

    <EditText
        android:id="@+id/DescriptionHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="500dp"
        android:layout_marginStart="235dp"
        android:layout_marginTop="150dp"
        android:ems="10"
        android:gravity="right"
        android:inputType="textPersonName"
        android:text="Description" />


</FrameLayout>
